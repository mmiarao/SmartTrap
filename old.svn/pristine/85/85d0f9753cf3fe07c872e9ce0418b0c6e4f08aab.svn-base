<a routerLink='create'>
    <div mat-button color="warn">新規登録</div>
</a>
<table align="center">
  <tr>
    <th>名前</th>
    <th>E-Mail</th>
    <th>電話番号</th>
    <th>E-Mail通報</th>
    <th>LINE通報</th>
    <th></th>
  </tr>
  <tr *ngFor="let member of members">
    <td>{{member.name}}</td>
    <td>{{member.email}}</td>
    <td>{{member.phone}}</td>
    <td>{{member.useEmail?"通報":"－"}}</td>
    <td>{{member.useLine?"通報":"－"}}</td>
    <td>
      <a mat-button routerLink='detail/{{member.id}}'>
        <div color="warn">編集</div>
      </a>
      <a mat-button routerLink='delete/{{member.id}}'>
        <div mat-button color="err">削除</div>
      </a>
    </td>
  </tr>
</table>
<div *ngIf="hasNext">
  <button mat-button onclick="getMembers()">さらに読み込む</button>
</div>
