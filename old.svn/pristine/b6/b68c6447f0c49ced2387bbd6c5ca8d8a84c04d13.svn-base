  .grid-pad {
    padding: 10px 0;
  }
  .grid-pad > [class*='col-']:last-of-type {
    padding-right: 20px;
  }
  @media (max-width: 600px) {
    .module {
      font-size: 10px;
      max-height: 75px; }
  }
  @media (max-width: 1024px) {
    .grid {
      margin: 0;
    }
    .module {
      min-width: 60px;
    }
  }

  .info-card {
    max-width: 400px;
    margin:auto;
    display:inline-block;
    align-content: center;
  }
  
  .info-header-image {
    background-image: url('../../../assets/favicon.png');
    background-size: cover;
  }